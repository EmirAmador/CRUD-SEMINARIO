<% include partials/_header %>


<div class="container mt-5">
  <div class="row">
    <div class="col-md-9">
    
      <div img src="logo.png"> </div>
      <h1>UNIVERSIDAD CATOLICA DE HONDURAS</h1>
      <h3 style="text-align: center;">Nuestra Señora Reina de la Paz</h3>
      <table class="table table-bordered table-striped text-center mt-4">
        <thead>
          <tr>
            <td><b>Id</b></td>
            <td><b>Alumno</b></td>
            <td><b>Correo</b></td>
            <td><b>Edad</b></td>
            <td><b>Carreras</b></td>
            <td><b>Opciones</b></td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].alumno %></td>
                <td><%= data[i].correo %></td>
                <td><%= data[i].edad %></td>
                <td><%= data[i].carrera %></td>
                
                <td>
                  <a  style="background-color: yellow;color: black;" href="/update/<%= data[i].id %>" class="btn btn">Actualizar</a>
                  <a style="background-color: red;" style="margin-top: 3px;" href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
   
</div>


<div  class="col-md-3">
  <div class="card-body">
    <br><br>
    <h3 style="background-color: lightgreen; text-align: center;">Agregar nuevo Alumno</h3>
    <form action="/add" method="POST">
     
      <div class="form-group">
        <input type="text" name="alumno" placeholder="Nombre de Alumno" class="form-control" autofocus>
      </div>
      <div class="form-group">
        <select name="carrera" class="form-control" id="carrera">
          <option selected disabled>Carreras</option>
          <% for (var i = 0; i < carreras.length; i++) { -%>
            <option value="<%= carreras[i].id %>">
              <%= carreras[i].carrera%>
            </option>
          <% } -%>
        </select>
      </div>
      <div class="form-group">
        <input type="text" name="correo" placeholder="Correo" class="form-control">
      </div>
      <div class="form-group">
        <input type="number" name="edad" placeholder="Edad" class="form-control">
      </div>

      

      <button  style="background-color: green; text-align: center;" type="submit" class="btn btn-primary" class="bi bi-box-arrow-down">
        Guardar Alumno
      </button>
    </form>
  </div>
</div>

<script>
  $("#tb").bootstrapTable({
               paginación: verdadero, // Si se muestra la barra de paginación
               pageSize: 3, // Número de filas que se muestran en una página
               paginationLoop: false, // Si se abre el bucle infinito de la barra de paginación, haga clic en la página siguiente cuando la última página se convierta en la primera página
               pageList: [5, 10, 20] // Seleccione cuántas filas se muestran en cada página. Si los datos son demasiado pequeños, puede ser ineficaz
  });
  
</script>

<% include partials/_footer %>
