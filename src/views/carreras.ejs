<% include partials/_headercarrera %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-bordered table-striped text-center mt-4">
        <thead>
          <tr>
           <td><b>Id</b></td></b>
            <td><b>Carreras</b></td>
            <td><b>Numero de Clases</b></td>
             <td><b>Opciones</b></td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].carrera %></td>
                <td><%= data[i].numclases %></td>
                <td>
                  <a style="background-color: blue;color: white;" href="/carreras/updatem/<%= data[i].id %>" class="btn btn">Actualizar</a>
                  <a style="margin-top: 2px; background-color: red;" href="/carreras/deletem/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div style="margin-top: 3%;" class="col-md-3">
     

        
        <form action="/carreras/addm" method="POST">
      
          <div   class="form-group">
            <input type="text" name="carrera" placeholder="Nombre de Carrera" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="number" name="numclases" placeholder="Numero de Clases" class="form-control">
          </div>

          <button style="background-color: green;" type="submit" class="btn btn-primary">
            Guardar
          </button>
        </form>
      </div>
    </div>
 
</div>


